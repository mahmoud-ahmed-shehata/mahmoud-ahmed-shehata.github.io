    function skill(name,lvl,w){
      return `
        <div class="skill" style="--w:${w}">
          <div class="name">${escapeHtml(name)}</div>
          <div class="lvl">${escapeHtml(lvl)}</div>
          <div class="meter"><i></i></div>
        </div>
      `;
    }

    function projOverview(tag,title,role,scope,outcomes,kpis,visuals,pageNo){
      return {
        o:"l", title:tag, h2:title,
        leftCards:[{type:"card", h:"Role", html:`
          <p class="p"><b>${escapeHtml(role)}</b> — site execution ownership, coordination, inspections readiness, and close-out discipline.</p>
          <div class="rule"></div>
          <div class="two">
            <div class="card soft">
              <p class="h3">Scope</p>
              <div class="pills">${scope.map(s=>`<span class="pill">${escapeHtml(s)}</span>`).join("")}</div>
            </div>
            <div class="card soft">
              <p class="h3">Key outcomes</p>
              <ul class="list">${outcomes.map(x=>`<li>${escapeHtml(x)}</li>`).join("")}</ul>
            </div>
          </div>
          <div style="height:10px"></div>
          <div class="card soft">
            <p class="h3">Highlights</p>
            <div class="kpis">${kpis.map(k=>`<div class="kpi"><b>${escapeHtml(k.a)}</b><span>${escapeHtml(k.b)}</span></div>`).join("")}</div>
          </div>
        `}],
        rightVisuals: visuals,
        footerLeft: tag,
        forcePage: pageNo
      };
    }

    function projVisual(tag,title,leftVisuals,rightVisuals,focus,pageNo,extraList){
      return {
        o:"p", title:tag, h2:title,
        leftVisuals,
        leftCards: focus?.length ? [{type:"soft", h:"Focus", html:`<ul class="list">${focus.map(x=>`<li>${escapeHtml(x)}</li>`).join("")}</ul>`}] : [],
        rightVisuals,
        rightCards: (extraList && extraList.length) ? [{type:"card", h:"High-effort points", html:`<ul class="list">${extraList.map(x=>`<li>${escapeHtml(x)}</li>`).join("")}</ul>`}] : [],
        footerLeft: tag,
        forcePage: pageNo
      };
    }

    function projResp(tag,title,owned,highEff,visual,pageNo,customQuoteHtml){
      return {
        o:"p", title:tag, h2:title,
        leftCards:[{type:"card", h:"Owned deliverables", html:`
          <ul class="list">${owned.map(x=>`<li>${escapeHtml(x)}</li>`).join("")}</ul>
          ${highEff.length?`
            <div class="rule"></div>
            <p class="h3">High-effort points</p>
            <ul class="list">${highEff.map(x=>`<li>${escapeHtml(x)}</li>`).join("")}</ul>
          `:""}
          ${customQuoteHtml?`<div class="rule"></div>${customQuoteHtml}`:""}
        `}],
        rightVisuals:[visual],
        footerLeft: tag,
        forcePage: pageNo
      };
    }

    function escapeHtml(str){
      return String(str).replace(/[&<>"']/g, s => ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;',"'":'&#39;'}[s]));
    }

    function mkPills(arr){
      if(!arr?.length) return "";
      return `<div class="pills">${arr.map(p=>{
        if(p.b) return `<span class="pill"><b>${escapeHtml(p.b)}</b></span>`;
        if(p.mono) return `<span class="pill mono">${escapeHtml(p.mono)}</span>`;
        return `<span class="pill">${escapeHtml(p.t||"")}</span>`;
      }).join("")}</div>`;
    }

    function mkCard(c){
      const cls = c.type==="soft" ? "card soft" : "card";
      return `<div class="${cls}">
        ${c.h?`<p class="h3">${escapeHtml(c.h)}</p>`:""}
        ${c.html||""}
      </div>`;
    }

    function mkVisual(v){
      return `<div class="visual" style="height:${v.height||"140mm"}">
        <div class="v-tag">VISUAL</div>
        <div class="v-label">
          <p class="v-title"><b>${escapeHtml(v.h||"")}</b></p>
          <p class="v-desc">${escapeHtml(v.d||"")}</p>
        </div>
      </div>`;
    }

    const deck = document.getElementById("deck");
    let autoPage = 1;

    pages.forEach((pg)=>{
      const sec = document.createElement("section");
      const isLand = pg.o==="l";
      sec.className = "page" + (isLand ? " landscape" : "");
      const num = pg.forcePage ? String(pg.forcePage).padStart(2,"0") : String(autoPage).padStart(2,"0");
      autoPage++;

      const headerTitle = pg.title ? `<p class="kicker">${escapeHtml(pg.title)}</p>` : "";
      const hLine = pg.h1 ? `<h1 class="h1">${escapeHtml(pg.h1)}</h1>` : (pg.h2 ? `<h2 class="h2">${escapeHtml(pg.h2)}</h2>` : "");
      const subPills = mkPills(pg.subPills);
      const lead = pg.lead ? `<p class="lead" style="max-width:82%">${pg.lead}</p>` : "";
      const para = pg.para ? `<p class="p" style="max-width:86%">${escapeHtml(pg.para)}</p>` : "";

      const leftCol = `
        <div class="col">
          ${(pg.leftCards||[]).map(mkCard).join("")}
          ${(pg.leftVisuals||[]).map(mkVisual).join("")}
        </div>
      `;
      const rightCol = `
        <div class="col">
          ${(pg.rightCards||[]).map(mkCard).join("")}
          ${(pg.rightVisuals||[]).map(mkVisual).join("")}
        </div>
      `;

      const gridClass = isLand ? "grid land" : "grid";
      const grid = (pg.leftCards||pg.rightCards||pg.leftVisuals||pg.rightVisuals) ? `
        <div class="${gridClass}" style="margin-top: ${pg.lead||pg.para||pg.subPills||pg.h1||pg.h2 ? "10mm":"7mm"}">
          ${isLand ? leftCol + rightCol : leftCol + rightCol}
        </div>
      ` : "";

      sec.innerHTML = `
        <div class="safe">
          ${headerTitle}
          ${hLine}
          ${subPills ? subPills : ""}
          ${lead}
          ${(lead||subPills||para) ? `<div class="rule"></div>` : ""}
          ${para}
          ${grid}
          <div class="foot">
            <span>${escapeHtml(pg.footerLeft||"")}</span>
            <span class="dots">• • •</span>
            <span>${num}</span>
          </div>
        </div>
      `;
      deck.appendChild(sec);
    });
  </script>
</body>
</html>
